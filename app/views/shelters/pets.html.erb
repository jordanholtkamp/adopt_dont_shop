<nav>
  <h1 class='headers'>All Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %> </h1>
  <%= link_to "All Shelters", "/shelters" %>
  <%= link_to "All Pets", "/pets" %>
</nav><br><br>

<% @shelter.pets.each do |pet| %>
  <img src= <%= pet.image %>><br>

  <ul>
    <li>Hi, I'm <%= link_to "#{pet.name}", "/pets/#{pet.id}" %> </li>
    <li>Age: <%= pet.approximate_age %> </li>
    <li>Gender: <%= pet.sex %> </li>
  </ul>

  <section id="pet-<%= pet.id %>">
    <%= link_to 'Edit Pet Info', "/pets/#{pet.id}/edit" %>
    <%= button_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %>
  </section><br><br>
<% end %>

<%= link_to "Add Pet", "/shelters/#{@shelter.id}/pets/new"  %>
